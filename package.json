{
  "name": "decomposer",
  "version": "1.0.0",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "start": "bun ./src/index.ts",
    "dev": "bun --watch ./src/index.ts",
    "lint": "eslint ./src ./tools ./integration --ext .ts",
    "format": "prettier ./src ./tools ./integration --write",
    "format:check": "prettier ./src ./tools ./integration --check",
    "test:unit": "bun test ./src",
    "test:coverage": "bun test --coverage ./src",
    "test:integration": "bun test --timeout 10000 ./integration",
    "check": "tsc --noEmit",
    "generate": "bun --silent api:filter && bun --silent api:generate",
    "api:filter": "bun --silent ./tools/openapi/filter.ts",
    "api:generate": "bun --silent ./tools/openapi/generate.ts",
    "circular": "madge --circular ./src --extensions ts"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "dependencies": {
    "@hono/zod-validator": "0.7.0",
    "async-mutex": "0.5.0",
    "chalk": "5.4.1",
    "hono": "4.8.4",
    "hono-pino": "0.9.1",
    "http-status-codes": "2.3.0",
    "pino": "9.7.0",
    "pouchdb": "9.0.0",
    "true-myth": "9.0.1",
    "true-myth-zod": "0.1.2",
    "uuid": "11.1.0",
    "zod": "4.0.2"
  },
  "devDependencies": {
    "@eslint/eslintrc": "3.3.1",
    "@eslint/js": "9.30.1",
    "@trivago/prettier-plugin-sort-imports": "5.2.2",
    "@types/bun": "1.2.18",
    "@types/node": "24.0.10",
    "@types/pouchdb": "6.4.2",
    "@typescript-eslint/eslint-plugin": "8.35.1",
    "@typescript-eslint/parser": "8.35.1",
    "eslint": "9.30.1",
    "globals": "16.3.0",
    "madge": "8.0.0",
    "openapi-format": "1.27.1",
    "openapi-types": "12.1.3",
    "openapi-zod-client": "1.18.3",
    "pouchdb-adapter-memory": "9.0.0",
    "prettier": "3.6.2",
    "ts-node": "10.9.2",
    "typescript": "5.8.3",
    "typescript-eslint": "8.35.1",
    "yaml": "2.8.0"
  }
}
